@using DemoProject.Entities.ViewModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
@model RegistrationModel



<partial name="_Notification" />
<div class="container mt-5 shadow-md">
    <div class="row text-center my-3">
        <span class="fs-1  fw-bold">Register</span>
    </div>
    
    <form asp-action="Registration" method="post">
        <div class="row">
            <div class="form-group col-6">
                <span class="fs-4 d-flex">First Name <p class="text-danger fs-5">*</p></span>
                <input type="text" id="firstName" name="firstName" asp-for="FirstName" placeholder="Enter Your First Name..">
            </div>

            <div class="form-group col-6">
                <span class="fs-4 d-flex">Last Name <p class="text-danger fs-5">*</p></span>
                <input type="text" id="lastName" name="lastName" asp-for="LastName" placeholder="Enter Your Last Name..">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <span class="fs-4 d-flex">Email <p class="text-danger fs-5">*</p></span>
                <input type="email" id="email" name="email" asp-for="Email" placeholder="Enter Your Email..">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-6">
                <span class="fs-4 d-flex">Password <p class="text-danger fs-5">*</p></span>
                <input type="password" id="password" name="password" asp-for="Password" placeholder="Enter Your Password..">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <span class="fs-4 d-flex">Confirm Password <p class="text-danger fs-5">*</p></span>
                <input type="password" id="confirmpassword" name="confirmpassword" asp-for="ConfirmPassword" placeholder="Confirm Your Password..">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group col-6">
                <span class="fs-4 d-flex">Phone Number <p class="text-danger fs-5">*</p></span>
                <input type="text" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" placeholder="Enter Your Phonenumber..">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <span class="fs-4 d-flex">Country<p class="text-danger">*</p></span>
                <select class="form-select row-cols-auto " aria-span="Default select example" id="ucountries" onchange="GetCityForRegistration()" asp-for="CountryId">
                    <option selected>Select Country</option>
                    @foreach (var obj in @ViewBag.countries)
                    {
                        <option value="@obj.CountryId"> @obj.Name</option>
                    }
                </select>

            </div>
            <div class="col">
                <span class="fs-4 d-flex">City<p class="text-danger">*</p></span>
                <select class="form-select row-cols-auto" aria-span="Default select example" id="selectCityListsregistration" asp-for="CityId">
                </select>

            </div>

        </div>


        <div class="form-group">
            <button class="btn btn-secondary" type="submit">Register</button> <a asp-controller="Home" asp-action="Index">Login Now</a>
        </div>
    </form>
</div>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f1f1f1;
        background-image: url('../Assets/multifactor-authentificaton1.png');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .container {
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
        background-color: whitesmoke;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group span {
            display: block;
            font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group input[type="password"],
        .form-group input[type="tel"] {
            width: 100%;
            padding: 10px;
            border-radius: 3px;
            border: 1px solid #ccc;
        }

        .form-group input[type="submit"] {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
        }

            .form-group input[type="submit"]:hover {
                background-color: #45a049;
            }
</style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Home.js"></script>