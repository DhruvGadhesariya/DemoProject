@using DemoProject.Entities.ViewModel
@{
    Layout = null;
}
@model OrderDetailsForMail
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<body>
    <header>
            <div class="container-fluid ">
                <a class=" d-flex navbar-brand fw-bold  align-items-center justify-content-center" href="https://www.tatvasoft.com/" target="_blank" style="color:black;font-size:30px;text-decoration:none;">
                    <img src="/Assets/download.jpg" width="100" height="100" class="d-inline-block align-text-top" alt="Image" />
                    Tatvasoft
                </a>
            </div>
    </header>
    <div class="container">
        <div class="row justify-content-center mt-4">
                <div class="order-details p-4">
                    <img src="/Assets/multifactor-authentificaton.png"  alt="Image" style="width:300px;height:300px;"/>
                    <h2 class="mb-4 fs-1 fw-bold">Order Details</h2>

                    <div class="row">
                        <div class="col-6">
                            <p>
                                <label class="fs-5 fw-bold">Order ID :</label> @Model.UserId
                            </p>
                            <p>
                                <label class="fs-5 fw-bold">Product ID :</label> @Model.ProductId
                            </p>
                            <p>
                                <label class="fs-5 fw-bold">Country :</label> @Model.CountryName
                            </p>
                            <p>
                                <label class="fs-5 fw-bold">City :</label> @Model.CityName
                            </p>
                        </div>

                        <div class="col-6">
                            <p>
                                <label class="fs-5 fw-bold">User Name :</label> @Model.FirstName &nbsp; @Model.LastName
                            </p>

                            <p>
                                <label class="fs-5 fw-bold">Product Name :</label> @Model.ProductName
                            </p>

                            <p>
                                <label class="fs-5 fw-bold">Date For :</label> @Model.Date.ToString("yyyy-MM-dd")
                            </p>
                        </div>
                    </div>
                </div>
    
        </div>
        <button  class="btn skill mt-2"  onclick="location.href='@Url.Action("SendInvite","Home" , new {OrderId = @Model.OrderId})'">Back</button>
    </div>
    <footer>

    </footer>
</body>

<style>
    body {
        font-family: Arial, sans-serif;
        font-size: 14px;
        line-height: 1.5;
        color: #333;
    }

    .order-details {
        margin-top: 20px;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #f9f9f9;
    }

        .order-details h2 {
            font-size: 18px;
            color: #555;
        }

        .order-details p {
            margin-bottom: 10px;
        }

        .order-details label {
            font-weight: bold;
        }

        .btn.skill {
        border: 2px solid orange;
        border-radius: 25px;
        color: #757575;
        padding: 8px 37px 8px 37px;
    }
</style>
































